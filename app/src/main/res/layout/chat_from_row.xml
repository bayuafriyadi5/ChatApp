<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content">

    <TextView
            android:text="Lorem ipsum dolor anjay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profilphoto"
            android:padding="16dp"
            android:id="@+id/textView_from_row"
            app:layout_constraintStart_toEndOf="@+id/imageView_from_row"
            android:layout_marginLeft="8dp"
            android:maxWidth="240dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView_from_row"
            android:layout_marginTop="8dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="2dp"
            android:id="@+id/imageView_from_row"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round"/>
</android.support.constraint.ConstraintLayout>